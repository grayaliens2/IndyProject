<%- include('../partials/head')-%>
<%- include('../partials/nav')-%>
  <body>
    <script src="add-element.js"></script>

    <div class="navbar navbar-light bg-light">
      <div class="container-fluid">

        <form action="/ask" method="POST">
          <div class="form-group">
            <label for="artist name">Artist Name</label>
            <input type="text" class="form-control" id="artname" name = "artname" placeholder="Artist Name"/>
          </div>
          <input type="submit" value="Click here to submit the form"/>
        </form>


      </div>
    </div>

<% if (data){
  temp = data.artists
  holder = 'https://' + temp[0].strWebsite
  out = '<img src='+ temp[0].strArtistBanner +' alt="">'
  out += '<h1>'+temp[0].strArtist+'</h1>'
  out += '<a href='+holder+' class="btn btn-primary btn-lg" tabindex="-1" role="button" >Primary link</a>'
  out += '<h3>'+temp[0].intFormedYear+'</h3>'
  out += '<h3>'+temp[0].strGenre+'</h3>'
  out += '<p>'+temp[0].strBiographyEN+'</p>'
  %>
  <%- out %>


  <h2>Add Review</h2>
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Add review
  </button>

  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add Review</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <form action="/rate" method="POST">
            <div class="form-group">
              <label for="formGroupExampleInput">Artist</label>
              <%
              name = '<input type="text" class="form-control" id="aname" name = "aname" value='+temp[0].strArtist+' readonly>'
              %>
              <%- name %>
            </div>
          <div class="form-group">
            <label for="formGroupExampleInput">Enter Your Review Here</label>
            <textarea rows = "5" cols = "60" name = "description" id="description">
            </textarea>
          </div>
          <input type="submit" value="Click here to submit the form"/>
        </form>
        </div>

      </div>
    </div>
  </div>

<% } %>
  </body>
</html>
